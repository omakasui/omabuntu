#!/bin/bash

# Set the Omakube channel, which dictates what git branch is used.
#
# Stable uses the main branch, which only sees updates on official releases.
#
# Dev tracks the active development dev branch, which may include partial or broken updates.
# This should only be used by Omakube developers and people with a lot of experience managing
# Linux systems.

if (($# == 0)); then
  echo "Usage: omakub-channel-set [stable|dev]"
  exit 1
else
  channel="$1"
fi

case "$channel" in
"stable") omakub-branch-set "main" ;;
"dev") omakub-branch-set "dev" ;;
*) echo "Unknown channel: $channel"; exit 1; ;;
esac

omakub-update -y